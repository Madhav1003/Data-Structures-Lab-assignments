#include <iostream>
#define MAX 100

using namespace std;

void printNGE(int arr[], int n) {
    int stack[MAX];
    int top = -1;

    int nge[MAX]; 

    for (int i = 0; i < n; i++) {
        nge[i] = -1;
    }

    for (int i = 0; i < n; i++) {
       
        while (top != -1 && arr[i] > arr[stack[top]]) {
            nge[stack[top]] = arr[i];
            top--;
        }
        stack[++top] = i;
    }
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " --> " << nge[i] << endl;
    }
}

int main() {
    int arr[] = {4, 5, 2, 25};
    int n = sizeof(arr) / sizeof(arr[0]);
    printNGE(arr, n);
    return 0;
}
